@using imtahanMvc.Models
@model List<Teachers>
@{
    int count = 0;
}
<div class="container">
    <h1>Teachers</h1>
    <td><a class="btn btn-primary" asp-action="Create">Create</a></td>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">SurName</th>
                <th scope="col">Photo</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td scope="col">
                        <img src="#" alt="Alternate Text" />
                    </td>
                    <td><a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
